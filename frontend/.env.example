# ============================================================================
# Agency OS Frontend Environment Variables
# ============================================================================
# Copy this file to .env.local and fill in your values
# ============================================================================

# === Supabase ===
NEXT_PUBLIC_SUPABASE_URL=https://[PROJECT_REF].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# === API ===
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
# For production:
# NEXT_PUBLIC_API_URL=https://your-api.railway.app/api/v1

# === Stripe (Client-side) ===
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_...

# === Error Tracking (Sentry) ===
NEXT_PUBLIC_SENTRY_DSN=https://xxx@o123.ingest.sentry.io/456

# === Analytics (Optional) ===
NEXT_PUBLIC_POSTHOG_KEY=phc_...
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# === Calendar Integration (Optional) ===
NEXT_PUBLIC_CALCOM_EMBED_URL=https://cal.com/your-agency
NEXT_PUBLIC_CALENDLY_URL=https://calendly.com/your-agency

# === Feature Flags (Optional) ===
NEXT_PUBLIC_ENABLE_VOICE_CHANNEL=false
NEXT_PUBLIC_ENABLE_DIRECT_MAIL=false
